{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "types": [
            "jest",
            "node"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node"
    },
    "exclude": [
        "./src/**/*.test.ts",
        "./node_modules"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}